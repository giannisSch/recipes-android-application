<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".GeneralScreen">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_right_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/login_main_txt"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/login_main_txt"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="Welcome back"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/sub_txt_login_scr"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:textColor="#a6000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/login_main_txt"
        app:layout_constraintTop_toBottomOf="@id/login_main_txt"
        android:text="What would you like to cook today?\nLogin and find what you desire" />


    <EditText
        android:id="@+id/username_txt"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_user_icon"
        android:drawableStart="@drawable/ic_user_icon"
        android:drawablePadding="7dp"
        app:layout_constraintTop_toBottomOf="@+id/sub_txt_login_scr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/password_txt"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_pass_icon_24dp"
        android:drawableStart="@drawable/ic_pass_icon_24dp"
        android:drawablePadding="7dp"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/username_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_main_btn"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:text="Login"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>