<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralScreen">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_right_detail"
        app:layout_constraintBottom_toTopOf="@+id/reg_main_txt"
        app:layout_constraintLeft_toLeftOf="@id/reg_main_txt"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/reg_main_txt"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="Create account"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/sub_txt_reg_scr"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:textColor="#a6000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/reg_main_txt"
        app:layout_constraintTop_toBottomOf="@id/reg_main_txt"
        android:text="Get on board" />


    <EditText
        android:id="@+id/reg_username_txt"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_marginTop="88.5dp"
        android:drawableLeft="@drawable/ic_user_icon"
        android:drawableStart="@drawable/ic_user_icon"
        android:drawablePadding="7dp"
        app:layout_constraintTop_toBottomOf="@+id/sub_txt_reg_scr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/reg_email_txt"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:layout_marginTop="29.5dp"
        android:drawableLeft="@drawable/ic_email_icon_24dp"
        android:drawableStart="@drawable/ic_email_icon_24dp"
        android:drawablePadding="7dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_username_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/reg_password_txt"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginTop="29.5dp"
        android:drawableLeft="@drawable/ic_pass_icon_24dp"
        android:drawableStart="@drawable/ic_pass_icon_24dp"
        android:drawablePadding="7dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_email_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reg_main_btn"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:text="Create Account"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_password_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>