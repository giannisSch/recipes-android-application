<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorOnHeader</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextOnBackground" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="RoundFieldAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>
